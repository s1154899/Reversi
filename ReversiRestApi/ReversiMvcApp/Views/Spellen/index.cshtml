@model IEnumerable<ReversiRestApi.Model.SendableSpel>

@{
    ViewData["Title"] = "index";

}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Token)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Token)
            </td>

            <td>
                <a asp-action="Join" asp-route-id="@item.Token">Join</a> |
                <a asp-action="Details" asp-route-id="@item.Token">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Token">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
